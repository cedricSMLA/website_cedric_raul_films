---
export interface Props {
  title: string;
  description?: string;
  image?: string;
  noindex?: boolean;
}

const { title, description, image, noindex = false } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImage = image ? new URL(image, Astro.site) : new URL('/media/hero-poster.jpg', Astro.site);

// Analytics
const plausibleDomain = import.meta.env.PLAUSIBLE_DOMAIN;
const plausibleSrc = import.meta.env.PLAUSIBLE_SRC || 'https://plausible.io/js/script.js';
---

<!doctype html>
<html lang="fr" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description || "Cédric Raúl Films - Vidéaste mariage cinématographique, drone FPV, Côte d'Azur. Films de mariage haut de gamme."} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Robots -->
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description || "Vidéaste mariage cinématographique sur la Côte d'Azur"} />
    <meta property="og:image" content={socialImage} />
    <meta property="og:locale" content="fr_FR" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description || "Vidéaste mariage cinématographique sur la Côte d'Azur"} />
    <meta property="twitter:image" content={socialImage} />
    
    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://www.youtube.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <title>{title}</title>

    <!-- Global styles -->
    <link rel="stylesheet" href="/src/styles/global.css" />

    <!-- JSON-LD Schema -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "ProfessionalService",
        "name": "Cédric Raúl Films",
        "description": "Vidéaste spécialisé dans les films de mariage cinématographiques et les vidéos corporate avec drone FPV",
        "url": "https://cedricraulfilms.fr",
        "logo": "https://cedricraulfilms.fr/logo.svg",
        "image": "https://cedricraulfilms.fr/media/hero-poster.jpg",
        "telephone": "+33-X-XX-XX-XX-XX",
        "priceRange": "€€€",
        "areaServed": {
          "@type": "Place",
          "name": "Côte d'Azur, France"
        },
        "serviceType": ["Vidéaste mariage", "Drone FPV", "Vidéo corporate"],
        "founder": {
          "@type": "Person",
          "name": "Cédric Raúl"
        }
      }
    </script>
    
    <!-- Analytics - Plausible -->
    {plausibleDomain && (
      <script defer data-domain={plausibleDomain} src={plausibleSrc}></script>
    )}
  </head>
  <body class="bg-lin text-pierre font-sans antialiased">
    <!-- Page transition overlay -->
    <div class="page-transition-overlay" id="page-transition-overlay"></div>

    <!-- Container global 77% -->
    <div class="w-[95%] md:w-[77%] mx-auto">
      <!-- Header -->
      <header class="bg-lin transition-all duration-300 relative z-40" id="header">
        <nav class="w-full px-4 py-6 md:px-0 md:py-10">
          <!-- Mobile layout -->
          <div class="md:hidden">
            <a href="/" class="hover:text-doré-patiné transition-colors block">
              <div class="text-3xl font-bold uppercase tracking-tight leading-none" style="font-family: 'Futura', 'Trebuchet MS', Arial, sans-serif; color: #2A2926;">
                Cédric Raúl
              </div>
            </a>
            <div class="flex justify-between items-end mt-1">
              <div>
                <a href="/" class="hover:text-doré-patiné transition-colors">
                  <div class="text-3xl font-bold uppercase tracking-tight leading-none" style="font-family: 'Futura', 'Trebuchet MS', Arial, sans-serif; color: #2A2926;">
                    Films
                  </div>
                </a>
                <div class="text-xs text-pierre/70 mt-2 tracking-wide">
                  Wedding videographer
                </div>
              </div>
              <!-- Mobile menu button -->
              <button class="text-pierre/80 hover:text-pierre transition-colors" id="mobile-menu-btn">
                <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
              </button>
            </div>
          </div>

          <!-- Desktop layout -->
          <div class="hidden md:flex justify-between items-end">
            <a href="/" class="hover:text-doré-patiné transition-colors group">
              <div class="text-5xl font-bold uppercase tracking-tight leading-none mb-2" style="font-family: 'Futura', 'Trebuchet MS', Arial, sans-serif; color: #2A2926;">
                Cédric Raúl Films
              </div>
              <div class="text-xs text-pierre/60 group-hover:text-pierre/80 transition-colors tracking-widest uppercase" style="letter-spacing: 0.1em;">
                Wedding videographer
              </div>
            </a>

            <div class="flex items-center gap-10 pb-1">
              <a href="/" class="text-noir-doux hover:text-doré-patiné transition-all duration-200 hover:scale-105 text-sm tracking-wide font-light" style="font-family: 'Aestetico', sans-serif; letter-spacing: 0.05em;">ACCUEIL</a>
              <a href="/a-propos" class="text-noir-doux hover:text-doré-patiné transition-all duration-200 hover:scale-105 text-sm tracking-wide font-light" style="font-family: 'Aestetico', sans-serif; letter-spacing: 0.05em;">À PROPOS</a>
              <a href="/contact" class="text-noir-doux hover:text-doré-patiné transition-all duration-200 hover:scale-105 text-sm tracking-wide font-light" style="font-family: 'Aestetico', sans-serif; letter-spacing: 0.05em;">CONTACT</a>
            </div>
          </div>

          <!-- Mobile menu items (hidden by default) -->
          <div class="md:hidden overflow-hidden transition-all duration-500 ease-out max-h-0 opacity-0" id="mobile-menu-items">
            <div class="mt-8 flex flex-col space-y-1 border-t border-pierre/10 pt-6">
              <a href="/" class="text-noir-doux hover:text-doré-patiné transition-all text-sm py-3 px-2 transform translate-x-4 opacity-0 duration-300 tracking-wide font-light" id="menu-item-1" style="font-family: 'Aestetico', sans-serif; letter-spacing: 0.05em;">ACCUEIL</a>
              <a href="/a-propos" class="text-noir-doux hover:text-doré-patiné transition-all text-sm py-3 px-2 transform translate-x-4 opacity-0 duration-300 tracking-wide font-light" id="menu-item-2" style="font-family: 'Aestetico', sans-serif; letter-spacing: 0.05em;">À PROPOS</a>
              <a href="/contact" class="text-noir-doux hover:text-doré-patiné transition-all text-sm py-3 px-2 transform translate-x-4 opacity-0 duration-300 tracking-wide font-light" id="menu-item-3" style="font-family: 'Aestetico', sans-serif; letter-spacing: 0.05em;">CONTACT</a>
            </div>
          </div>
        </nav>
      </header>

      <!-- Mobile overlay -->
      <div class="md:hidden fixed top-0 left-0 right-0 bottom-0 bg-noir-doux/50 z-30 opacity-0 invisible transition-all duration-500" id="mobile-overlay"></div>

      <!-- Main content -->
      <main>
        <slot />
      </main>

      <!-- Footer -->
      <footer class="bg-lin border-t border-pierre/20 py-16">
        <div class="px-4 max-w-2xl mx-auto text-center">
          <!-- Logo et description -->
          <div class="mb-8">
            <h3 class="text-2xl font-bold text-pierre mb-4" style="font-family: 'Futura', 'Trebuchet MS', Arial, sans-serif;">
              CÉDRIC RAÚL FILMS
            </h3>
            <p class="text-pierre/70 text-sm max-w-md mx-auto leading-relaxed mb-2">
              Films de mariage cinématographiques qui provoquent l'émotion
            </p>
            <p class="text-pierre/60 text-xs">
              Basé à Paris • Disponible partout ailleurs
            </p>
          </div>

          <!-- Réseaux sociaux -->
          <div class="flex justify-center space-x-8 mb-8">
            <a href="https://www.instagram.com/cedric_raul_films/" target="_blank"
               class="w-12 h-12 bg-pierre/10 rounded-full flex items-center justify-center text-pierre/70 hover:text-doré-patiné hover:bg-doré-patiné/10 transition-all hover:scale-110">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>

            <a href="https://www.youtube.com/@C%C3%A9dricRa%C3%BAlFilms" target="_blank"
               class="w-12 h-12 bg-pierre/10 rounded-full flex items-center justify-center text-pierre/70 hover:text-doré-patiné hover:bg-doré-patiné/10 transition-all hover:scale-110">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            </a>

            <a href="mailto:contact@smleyeprod.fr"
               class="w-12 h-12 bg-pierre/10 rounded-full flex items-center justify-center text-pierre/70 hover:text-doré-patiné hover:bg-doré-patiné/10 transition-all hover:scale-110">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
              </svg>
            </a>
          </div>

          <!-- Copyright -->
          <div class="pt-6 border-t border-pierre/10">
            <p class="text-xs text-pierre/60">&copy; 2024 Cédric Raúl Films. Tous droits réservés.</p>
            <p class="text-xs text-pierre/50 mt-1">by <span class="text-doré-patiné">SMLEYE Prod</span></p>
          </div>
        </div>
      </footer>

    <!-- Cookie Banner -->
    <div id="cookie-banner" class="fixed bottom-0 left-0 right-0 bg-lin/95 backdrop-blur-sm border-t border-pierre/20 p-4 z-50 hidden">
      <div class="container mx-auto flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-pierre/80">
          Ce site utilise des cookies pour améliorer votre expérience.
          <a href="/confidentialite" class="text-doré-patiné underline">En savoir plus</a>
        </p>
        <div class="flex gap-2">
          <button id="accept-cookies" class="bg-doré-patiné text-noir-doux px-4 py-2 rounded text-sm hover:bg-doré-light transition-colors">
            Accepter
          </button>
          <button id="decline-cookies" class="bg-transparent border border-pierre text-pierre px-4 py-2 rounded text-sm hover:bg-pierre/10 transition-colors">
            Refuser
          </button>
        </div>
      </div>
    </div>

    <script>
      // Mobile menu toggle with animations
      const mobileMenuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenuItems = document.getElementById('mobile-menu-items');
      const mobileOverlay = document.getElementById('mobile-overlay');
      const menuItem1 = document.getElementById('menu-item-1');
      const menuItem2 = document.getElementById('menu-item-2');
      const menuItem3 = document.getElementById('menu-item-3');

      let isMenuOpen = false;

      mobileMenuBtn?.addEventListener('click', () => {
        if (!isMenuOpen) {
          // Open menu
          mobileMenuItems?.classList.remove('max-h-0', 'opacity-0');
          mobileMenuItems?.classList.add('max-h-96', 'opacity-100');

          // Show overlay
          mobileOverlay?.classList.remove('opacity-0', 'invisible');
          mobileOverlay?.classList.add('opacity-100', 'visible');

          // Animate menu items
          setTimeout(() => {
            menuItem1?.classList.remove('translate-x-4', 'opacity-0');
            menuItem1?.classList.add('translate-x-0', 'opacity-100');
          }, 100);

          setTimeout(() => {
            menuItem2?.classList.remove('translate-x-4', 'opacity-0');
            menuItem2?.classList.add('translate-x-0', 'opacity-100');
          }, 200);

          setTimeout(() => {
            menuItem3?.classList.remove('translate-x-4', 'opacity-0');
            menuItem3?.classList.add('translate-x-0', 'opacity-100');
          }, 300);

          isMenuOpen = true;
        } else {
          closeMenu();
        }
      });

      function closeMenu() {
        // Hide menu items first
        menuItem1?.classList.add('translate-x-4', 'opacity-0');
        menuItem1?.classList.remove('translate-x-0', 'opacity-100');
        menuItem2?.classList.add('translate-x-4', 'opacity-0');
        menuItem2?.classList.remove('translate-x-0', 'opacity-100');
        menuItem3?.classList.add('translate-x-4', 'opacity-0');
        menuItem3?.classList.remove('translate-x-0', 'opacity-100');

        // Then hide overlay and menu
        setTimeout(() => {
          mobileMenuItems?.classList.add('max-h-0', 'opacity-0');
          mobileMenuItems?.classList.remove('max-h-96', 'opacity-100');

          mobileOverlay?.classList.add('opacity-0', 'invisible');
          mobileOverlay?.classList.remove('opacity-100', 'visible');
        }, 200);

        isMenuOpen = false;
      }

      // Close menu when clicking on overlay
      mobileOverlay?.addEventListener('click', closeMenu);

      // Close menu when clicking on a menu item
      [menuItem1, menuItem2, menuItem3].forEach(item => {
        item?.addEventListener('click', closeMenu);
      });

      // Cookie banner
      const cookieBanner = document.getElementById('cookie-banner');
      const acceptBtn = document.getElementById('accept-cookies');
      const declineBtn = document.getElementById('decline-cookies');
      
      // Show banner if no preference set
      if (!localStorage.getItem('cookie-consent')) {
        cookieBanner?.classList.remove('hidden');
      }
      
      acceptBtn?.addEventListener('click', () => {
        localStorage.setItem('cookie-consent', 'accepted');
        cookieBanner?.classList.add('hidden');
      });
      
      declineBtn?.addEventListener('click', () => {
        localStorage.setItem('cookie-consent', 'declined');
        cookieBanner?.classList.add('hidden');
      });

      // Page transitions
      const overlay = document.getElementById('page-transition-overlay');
      const links = document.querySelectorAll('a[href^="/"]');

      // Exclure les liens externes, ancres et downloads
      const internalLinks = Array.from(links).filter(link => {
        const href = link.getAttribute('href');
        return href &&
               href.startsWith('/') &&
               !href.startsWith('//') &&
               !link.hasAttribute('download') &&
               !link.getAttribute('target') === '_blank' &&
               !href.includes('#');
      });

      internalLinks.forEach(link => {
        link.addEventListener('click', (e) => {
          const href = link.getAttribute('href');

          // Ne pas intercepter si c'est la page actuelle
          if (href === window.location.pathname) {
            return;
          }

          e.preventDefault();

          // Déclencher l'animation de sortie
          document.body.classList.add('page-exit');
          overlay?.classList.add('active');

          // Naviguer après l'animation (450ms)
          setTimeout(() => {
            window.location.href = href;
          }, 450);
        });
      });

      // Animation d'entrée au chargement de la page
      window.addEventListener('pageshow', () => {
        document.body.classList.remove('page-exit');
        overlay?.classList.remove('active');
      });
    </script>
  </body>
</html>