  function initTimelineEffects() {
    const timelineContainer = document.getElementById('timeline-container');
    const timelineProgress = document.getElementById('timeline-progress');
    const timelineCircles = document.querySelectorAll('.timeline-circle > div');

    if (!timelineContainer || !timelineProgress) return;

    let ticking = false;

    // Animation de la ligne progressive
    function updateTimeline() {
      if (ticking) return;

      ticking = true;
      requestAnimationFrame(() => {
        const rect = timelineContainer.getBoundingClientRect();
        const windowHeight = window.innerHeight;
        const start = rect.top;
        const end = rect.bottom;

        // Calculer le pourcentage de scroll dans la section
        let progress = 0;
        if (start < windowHeight && end > 0) {
          progress = Math.max(0, Math.min(1, (windowHeight - start) / (windowHeight + rect.height)));
        }

        // Appliquer avec scaleY (plus fluide que height)
        timelineProgress.style.transform = `scaleY(${progress})`;

        ticking = false;
      });
    }

    // Observer pour les cercles (effet scale subtil)
    const circleObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        const circle = entry.target;
        if (entry.isIntersecting) {
          // Scale subtil + brightness
          circle.style.transform = 'scale(1)';
          circle.style.filter = 'brightness(1.1)';
        } else if (entry.boundingClientRect.top > 0) {
          // Pas encore visible
          circle.style.transform = 'scale(0.85)';
          circle.style.filter = 'brightness(0.7)';
        }
      });
    }, {
      threshold: 0.5,
      rootMargin: '-20% 0px'
    });

    // Observer chaque cercle
    timelineCircles.forEach(circle => {
      circle.style.transform = 'scale(0.85)';
      circle.style.filter = 'brightness(0.7)';
      circleObserver.observe(circle);
    });

    // Écouter le scroll (throttled)
    let scrollTimeout;
    function handleScroll() {
      updateTimeline();
      clearTimeout(scrollTimeout);
      scrollTimeout = setTimeout(updateTimeline, 50);
    }

    window.addEventListener('scroll', handleScroll, { passive: true });
    window.addEventListener('resize', handleScroll, { passive: true });

