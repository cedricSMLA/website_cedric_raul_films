      touchStartX = e.changedTouches[0].screenX;
      isDragging = true;
    }

    function handleTouchEnd(e) {
      if (!isDragging) return;
      touchEndX = e.changedTouches[0].screenX;
      handleSwipe();
      isDragging = false;
    }

    function handleSwipe() {
      if (isTransitioning) return;
      const swipeThreshold = 50;
      const diff = touchStartX - touchEndX;

      if (Math.abs(diff) > swipeThreshold) {
        if (diff > 0) {
          nextSlide();
        } else {
          prevSlide();
        }
      }
    }

    // Mouse drag support
    let mouseStartX = 0;
    let mouseEndX = 0;
    let isMouseDragging = false;

    function handleMouseDown(e) {
      if (isTransitioning) return;
      isMouseDragging = true;
      mouseStartX = e.pageX;
      track.style.cursor = 'grabbing';
      e.preventDefault();
    }

    function handleMouseUp(e) {
      if (!isMouseDragging || isTransitioning) return;
      isMouseDragging = false;
      track.style.cursor = 'grab';

      const diff = mouseStartX - e.pageX;
      const swipeThreshold = 50;

      if (Math.abs(diff) > swipeThreshold) {
        if (diff > 0) {
          nextSlide();
        } else {
          prevSlide();
        }
      }
    }

    function handleMouseMove(e) {
      if (!isMouseDragging) return;
      e.preventDefault();
    }

    // Touch events
    track.addEventListener('touchstart', handleTouchStart, { passive: true });
    track.addEventListener('touchend', handleTouchEnd, { passive: true });

    // Mouse drag events
    track.addEventListener('mousedown', handleMouseDown);
    document.addEventListener('mouseup', handleMouseUp);
    document.addEventListener('mousemove', handleMouseMove);

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft') {
        prevSlide();
      } else if (e.key === 'ArrowRight') {
        nextSlide();
      }
    });

    // Responsive update
    let resizeTimeout;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(updateCarousel, 100);
    });

    // Initialisation
    cloneCardsForInfiniteLoop(); // Créer les clones pour l'effet infini
    updateCarousel(false); // Init sans animation

    // Auto-play désactivé
  }

  // Initialiser
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initPackagesCarousel);
  } else {
    initPackagesCarousel();
  }
</script>
