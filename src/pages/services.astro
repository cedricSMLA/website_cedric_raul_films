  }

  // Initialiser
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTimelineEffects);
  } else {
    initTimelineEffects();
  }

  // ============================================
  // PACKAGES CAROUSEL GLASSMORPHISM STYLES
  // ============================================
  const carouselStyle = document.createElement('style');
  carouselStyle.textContent = `
    /* Hover effects sur cartes */
    .card-content:hover {
      transform: translateY(-4px);
      box-shadow: 0 25px 70px -15px rgba(0, 0, 0, 0.4);
      border-color: rgba(212, 175, 55, 0.3);
    }

    .card-content:hover .grain::before {
      opacity: 0.05;
    }

    /* Animation float subtile sur carte active */
    @keyframes floatSubtle {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }

    .carousel-card.active .card-content {
      background: linear-gradient(135deg, rgba(237, 229, 216, 0.12) 0%, rgba(237, 229, 216, 0.05) 100%);
      border-color: rgba(212, 175, 55, 0.4);
      animation: floatSubtle 6s ease-in-out infinite;
    }

    /* R√©duire animation si pr√©f√©rence mouvement r√©duit */
    @media (prefers-reduced-motion: reduce) {
      .carousel-card.active .card-content {
        animation: none;
      }
    }
  `;
  document.head.appendChild(carouselStyle);

  // ============================================
  // PACKAGES CAROUSEL WITH AUTO-PLAY
  // ============================================
  function initPackagesCarousel() {
    const track = document.getElementById('carousel-track');
    const prevBtn = document.getElementById('carousel-prev');
    const nextBtn = document.getElementById('carousel-next');
    const dots = document.querySelectorAll('.carousel-dot');
    const viewport = document.getElementById('carousel-viewport');
    const originalCards = document.querySelectorAll('.carousel-card');

    if (!track || !prevBtn || !nextBtn || !viewport || originalCards.length === 0) return;

    const totalOriginalSlides = originalCards.length;
    let autoPlayInterval = null;
    const autoPlayDelay = 5000; // 5 secondes
    let restartAutoPlayTimeout = null;
    let isTransitioning = false;

    // Touch/Mouse handling
    let touchStartX = 0;
    let touchEndX = 0;
    let isDragging = false;

    // Cloner toutes les cartes pour cr√©er un vrai effet infini (avant ET apr√®s)
    function cloneCardsForInfiniteLoop() {
      // Cloner toutes les cartes AVANT (pour navigation arri√®re fluide)
      const clonesBefore = [];
      for (let i = 0; i < totalOriginalSlides; i++) {
        const clone = originalCards[i].cloneNode(true);
        clone.setAttribute('data-clone', 'before');
        clonesBefore.push(clone);
      }
      // Ins√©rer les clones au d√©but
      clonesBefore.reverse().forEach(clone => {
        track.insertBefore(clone, track.firstChild);
      });

      // Cloner toutes les cartes APR√àS (pour navigation avant fluide)
      for (let i = 0; i < totalOriginalSlides; i++) {
        const clone = originalCards[i].cloneNode(true);
        clone.setAttribute('data-clone', 'after');
        track.appendChild(clone);
      }
    }

    // Calculer la largeur de d√©placement selon breakpoint
    function getSlideWidth() {
      if (window.innerWidth < 768) return 100; // Mobile: 1 carte
      if (window.innerWidth < 1024) return 50; // Tablet: 2 cartes
      return 33.333; // Desktop: 3 cartes
    }

    // Nombre de cartes visibles selon breakpoint
    function getVisibleCards() {
      if (window.innerWidth < 768) return 1;
      if (window.innerWidth < 1024) return 2;
      return 3;
    }

    // Commencer au milieu (apr√®s les clones before)
    let currentIndex = totalOriginalSlides;

    // Mettre √† jour la position du carousel
    function updateCarousel(animate = true) {
      if (isTransitioning) return; // Bloquer si transition en cours

      const slideWidth = getSlideWidth();
      const offset = -currentIndex * slideWidth;

      if (!animate) {
        track.style.transition = 'none';
        // Force reflow pour que le navigateur prenne en compte le 'none'
        track.offsetHeight;
      } else {
        track.style.transition = 'transform 700ms cubic-bezier(0.16, 1, 0.3, 1)';
        isTransitioning = true;
        setTimeout(() => {
          isTransitioning = false;
        }, 700);
      }

      track.style.transform = `translateX(${offset}%)`;

      // Position r√©elle pour les dots et classes (modulo totalOriginalSlides)
      const realIndex = ((currentIndex - totalOriginalSlides) % totalOriginalSlides + totalOriginalSlides) % totalOriginalSlides;

      // Mettre √† jour les classes actives sur les cartes originales
      originalCards.forEach((card, index) => {
        card.classList.toggle('active', index === realIndex);
      });

      // Mettre √† jour les dots
      dots.forEach((dot, index) => {
        if (index === realIndex) {
          dot.classList.remove('w-2', 'rounded-full', 'bg-lin/30');
          dot.classList.add('w-8', 'rounded-sm', 'bg-lin/70');
        } else {
          dot.classList.remove('w-8', 'rounded-sm', 'bg-lin/70');
          dot.classList.add('w-2', 'rounded-full', 'bg-lin/30');
        }
      });

      // Reset position si on d√©passe les limites (apr√®s la transition)
      if (animate) {
        setTimeout(() => {
          // Si on est sur les clones after (au-del√† de totalOriginalSlides * 2)
          if (currentIndex >= totalOriginalSlides * 2) {
            currentIndex = totalOriginalSlides + (currentIndex % totalOriginalSlides);
            updateCarousel(false);
          }
          // Si on est sur les clones before (en dessous de totalOriginalSlides)
          else if (currentIndex < totalOriginalSlides) {
            currentIndex = totalOriginalSlides + currentIndex;
            updateCarousel(false);
          }
        }, 700);
      }
    }

    // Navigation suivante
    function nextSlide() {
      if (isTransitioning) return; // Bloquer les clics rapides
      currentIndex++;
      updateCarousel();
    }

    // Navigation pr√©c√©dente
    function prevSlide() {
      if (isTransitioning) return; // Bloquer les clics rapides
      currentIndex--;
      updateCarousel();
    }

    // Aller √† un slide sp√©cifique (dots)
    function goToSlide(index) {
      if (isTransitioning) return; // Bloquer les clics rapides
      // Calculer l'index absolu en fonction de la position r√©elle
      currentIndex = totalOriginalSlides + index;
      updateCarousel();
    }

    // Auto-play
    function startAutoPlay() {
      stopAutoPlay();
      autoPlayInterval = setInterval(nextSlide, autoPlayDelay);
    }

    function stopAutoPlay() {
      if (autoPlayInterval) {
        clearInterval(autoPlayInterval);
        autoPlayInterval = null;
      }
    }

    // Red√©marrer auto-play apr√®s interaction (5 secondes d'inactivit√©)
    function restartAutoPlayAfterDelay() {
      clearTimeout(restartAutoPlayTimeout);
      restartAutoPlayTimeout = setTimeout(() => {
        const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
        if (!prefersReducedMotion) {
          startAutoPlay();
        }
      }, 5000);
    }

    // Navigation buttons
    prevBtn.addEventListener('click', () => {
      prevSlide();
      stopAutoPlay();
      restartAutoPlayAfterDelay();
    });

    nextBtn.addEventListener('click', () => {
      nextSlide();
      stopAutoPlay();
      restartAutoPlayAfterDelay();
    });

    // Dots navigation
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        goToSlide(index);
        stopAutoPlay();
        restartAutoPlayAfterDelay();
      });
    });

    // Touch/Swipe support
    function handleTouchStart(e) {
      if (isTransitioning) return;
      touchStartX = e.changedTouches[0].screenX;
      isDragging = true;
    }

    function handleTouchEnd(e) {
      if (!isDragging) return;
      touchEndX = e.changedTouches[0].screenX;
      handleSwipe();
      isDragging = false;
    }

    function handleSwipe() {
      if (isTransitioning) return;
      const swipeThreshold = 50;
      const diff = touchStartX - touchEndX;

      if (Math.abs(diff) > swipeThreshold) {
        if (diff > 0) {
          nextSlide();
        } else {
          prevSlide();
        }
        stopAutoPlay();
        restartAutoPlayAfterDelay();
      }
    }

    // Mouse drag support
    let mouseStartX = 0;
    let mouseEndX = 0;
    let isMouseDragging = false;

    function handleMouseDown(e) {
      if (isTransitioning) return;
      isMouseDragging = true;
      mouseStartX = e.pageX;
      track.style.cursor = 'grabbing';
      e.preventDefault();
    }

    function handleMouseUp(e) {
      if (!isMouseDragging || isTransitioning) return;
      isMouseDragging = false;
      track.style.cursor = 'grab';

      const diff = mouseStartX - e.pageX;
      const swipeThreshold = 50;

      if (Math.abs(diff) > swipeThreshold) {
        if (diff > 0) {
          nextSlide();
        } else {
          prevSlide();
        }
        stopAutoPlay();
        restartAutoPlayAfterDelay();
      }
    }

    function handleMouseMove(e) {
      if (!isMouseDragging) return;
      e.preventDefault();
    }

    // Touch events
    track.addEventListener('touchstart', handleTouchStart, { passive: true });
    track.addEventListener('touchend', handleTouchEnd, { passive: true });

    // Mouse drag events
    track.addEventListener('mousedown', handleMouseDown);
    document.addEventListener('mouseup', handleMouseUp);
    document.addEventListener('mousemove', handleMouseMove);

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft') {
        prevSlide();
        stopAutoPlay();
        restartAutoPlayAfterDelay();
      } else if (e.key === 'ArrowRight') {
        nextSlide();
        stopAutoPlay();
        restartAutoPlayAfterDelay();
      }
    });

    // Pause auto-play au survol
    viewport.addEventListener('mouseenter', () => {
      stopAutoPlay();
      clearTimeout(restartAutoPlayTimeout);
    });
    viewport.addEventListener('mouseleave', () => {
      restartAutoPlayAfterDelay();
    });

    // Responsive update
    let resizeTimeout;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(updateCarousel, 100);
    });

    // Initialisation
    cloneCardsForInfiniteLoop(); // Cr√©er les clones pour l'effet infini
    updateCarousel(false); // Init sans animation

    // D√©marrer auto-play si pas de pr√©f√©rence mouvement r√©duit
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    if (!prefersReducedMotion) {
      startAutoPlay();
    }
  }

  // Initialiser
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initPackagesCarousel);
  } else {
    initPackagesCarousel();
  }
</script>
