  <!-- Informations pratiques (plus compact et intégré) -->
  <Section background="dark" padding="lg" class="rounded-2xl mb-12">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-10">
        <h2 class="scroll-reveal text-2xl md:text-3xl font-light text-lin mb-3">
          Informations pratiques
        </h2>
        <div class="w-12 h-px bg-doré-patiné/30 mx-auto"></div>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-5">
        <!-- Paiement -->
        <div class="scroll-reveal bg-gradient-to-br from-lin/3 to-transparent border border-lin/8 rounded-xl p-5 hover:border-doré-patiné/20 transition-all duration-500">
