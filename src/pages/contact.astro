---
import Base from '@/layouts/Base.astro';
import Section from '@/components/Section.astro';
import Button from '@/components/Button.astro';
import Card from '@/components/Card.astro';

const contactEmail = import.meta.env.CONTACT_EMAIL || 'contact@cedricraulfilms.fr';
---

<Base 
  title="Contact - Cédric Raúl Films"
  description="Contactez-nous pour discuter de votre projet de film de mariage. Devis gratuit et réponse sous 24h."
>
  <!-- Hero Section -->
  <Section background="dark" padding="xl">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl md:text-6xl font-bold text-warm-ivory mb-6">
        Parlons de votre
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent-blue to-accent-purple">
          projet
        </span>
      </h1>
      
      <p class="text-xl text-warm-beige mb-8">
        Chaque mariage est unique. Échangeons sur vos envies pour créer ensemble un film qui vous ressemble.
      </p>
      
      <div class="grid md:grid-cols-3 gap-6 text-center">
        <div>
          <div class="w-12 h-12 bg-accent-blue rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-warm-ivory">Réponse rapide</h3>
          <p class="text-warm-beige text-sm">Sous 24h maximum</p>
        </div>
        
        <div>
          <div class="w-12 h-12 bg-accent-purple rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-warm-ivory">Devis gratuit</h3>
          <p class="text-warm-beige text-sm">Personnalisé et détaillé</p>
        </div>
        
        <div>
          <div class="w-12 h-12 bg-accent-blue rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17 8h1a4 4 0 110 8h-1m-10-8H6a4 4 0 000 8h1m2-4h8"/>
            </svg>
          </div>
          <h3 class="font-semibold text-warm-ivory">Conseil expert</h3>
          <p class="text-warm-beige text-sm">Accompagnement personnalisé</p>
        </div>
      </div>
    </div>
  </Section>

  <!-- Contact Form -->
  <Section background="light" padding="xl">
    <div class="max-w-4xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Form -->
        <div>
          <h2 class="text-3xl font-bold text-deep-black mb-8">
            Demande de devis
          </h2>
          
          <form id="contact-form" class="space-y-6">
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="nom" class="block text-sm font-medium text-deep-black mb-2">
                  Nom complet *
                </label>
                <input 
                  type="text" 
                  id="nom" 
                  name="nom" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent-blue focus:border-transparent"
                  placeholder="Votre nom"
                />
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-deep-black mb-2">
                  Email *
                </label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent-blue focus:border-transparent"
                  placeholder="votre@email.com"
                />
              </div>
            </div>
            
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="date" class="block text-sm font-medium text-deep-black mb-2">
                  Date du mariage *
                </label>
                <input 
                  type="date" 
                  id="date" 
                  name="date" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent-blue focus:border-transparent"
                />
              </div>
              
              <div>
                <label for="lieu" class="block text-sm font-medium text-deep-black mb-2">
                  Lieu du mariage *
                </label>
                <input 
                  type="text" 
                  id="lieu" 
                  name="lieu" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent-blue focus:border-transparent"
                  placeholder="Ville, département"
                />
              </div>
            </div>
            
            <div>
              <label for="budget" class="block text-sm font-medium text-deep-black mb-2">
                Budget envisagé
              </label>
              <select 
                id="budget" 
                name="budget"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent-blue focus:border-transparent"
              >
                <option value="">Sélectionnez votre budget</option>
                <option value="2000-3000">2000€ - 3000€</option>
                <option value="3000-4000">3000€ - 4000€</option>
                <option value="4000-5000">4000€ - 5000€</option>
                <option value="5000+">Plus de 5000€</option>
                <option value="autre">Autre</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-deep-black mb-2">
                Votre message *
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="6" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent-blue focus:border-transparent resize-none"
                placeholder="Parlez-nous de votre mariage, vos attentes, vos envies particulières..."
              ></textarea>
            </div>
            
            <!-- RGPD Consent -->
            <div class="flex items-start space-x-3">
              <input 
                type="checkbox" 
                id="consent" 
                name="consent" 
                required
                class="mt-1 h-4 w-4 text-accent-blue border-gray-300 rounded focus:ring-accent-blue"
              />
              <label for="consent" class="text-sm text-gray-700">
                J'accepte que mes données personnelles soient utilisées pour traiter ma demande. 
                <a href="/confidentialite" class="text-accent-blue underline">Politique de confidentialité</a>
              </label>
            </div>
            
            <div class="pt-4">
              <Button type="submit" size="lg" class="w-full">
                Envoyer ma demande
              </Button>
            </div>
          </form>
        </div>
        
        <!-- Info -->
        <div class="space-y-8">
          <Card class="bg-white border-gray-200" hover={false}>
            <div class="p-8">
              <h3 class="text-xl font-bold text-deep-black mb-4">
                Réservez un appel découverte
              </h3>
              <p class="text-gray-700 mb-6">
                Échangeons directement sur votre projet lors d'un appel de 30 minutes. 
                C'est l'occasion parfaite pour faire connaissance et définir vos besoins.
              </p>
              <Button href="#reserver" variant="outline" class="w-full">
                Planifier un appel
              </Button>
            </div>
          </Card>
          
          <Card class="bg-white border-gray-200" hover={false}>
            <div class="p-8">
              <h3 class="text-xl font-bold text-deep-black mb-4">
                Informations pratiques
              </h3>
              <div class="space-y-4 text-gray-700">
                <div class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-accent-blue" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                  <span>+33 6 XX XX XX XX</span>
                </div>
                
                <div class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-accent-blue" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                  <span>{contactEmail}</span>
                </div>
                
                <div class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-accent-blue" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <span>Côte d'Azur, France</span>
                </div>
                
                <div class="flex items-center space-x-3">
                  <svg class="w-5 h-5 text-accent-blue" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <span>Réponse sous 24h</span>
                </div>
              </div>
            </div>
          </Card>
          
          <Card class="bg-gradient-to-br from-accent-blue to-accent-purple text-white" hover={false}>
            <div class="p-8 text-center">
              <h3 class="text-xl font-bold mb-4">
                Forfait LOREN
              </h3>
              <p class="mb-4 opacity-90">
                Notre formule signature à partir de
              </p>
              <div class="text-3xl font-bold mb-6">
                2900€ TTC
              </div>
              <Button href="/loren" variant="secondary" class="w-full">
                Découvrir LOREN
              </Button>
            </div>
          </Card>
        </div>
      </div>
    </div>
  </Section>

  <!-- Partenaire CTA -->
  <Section background="dark" padding="lg">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl font-bold text-warm-ivory mb-6">
        Vous cherchez un duo vidéo/photo ?
      </h2>
      <p class="text-warm-beige mb-8">
        Découvrez nos photographes partenaires pour une couverture complète de votre mariage
      </p>
      <Button href="/photographes?utm_source=contact&utm_medium=cta&utm_campaign=partner" variant="outline">
        Voir nos partenaires photographes
      </Button>
    </div>
  </Section>

  <!-- Réserver call section (stub hidden) -->
  <div id="reserver" class="hidden">
    <Section background="light" padding="xl">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-4xl font-bold text-deep-black mb-6">
          Réserver un appel découverte
        </h2>
        <p class="text-xl text-gray-700 mb-8">
          Cette fonctionnalité sera bientôt disponible. En attendant, contactez-nous directement !
        </p>
        <Button href={`mailto:${contactEmail}?subject=Demande d'appel découverte`}>
          Nous contacter par email
        </Button>
      </div>
    </Section>
  </div>
</Base>

<script define:vars={{ contactEmail }}>
  // Contact form handling
  const form = document.getElementById('contact-form');
  
  form?.addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Get form data
    const formData = new FormData(form);
    const data = Object.fromEntries(formData);
    
    // Build mailto URL with pre-filled content
    const subject = encodeURIComponent(`Demande de devis - Mariage du ${data.date}`);
    const body = encodeURIComponent(`
Bonjour,

Je souhaite recevoir un devis pour la vidéo de mon mariage.

Informations :
- Nom : ${data.nom}
- Email : ${data.email}
- Date du mariage : ${data.date}
- Lieu : ${data.lieu}
- Budget envisagé : ${data.budget || 'Non spécifié'}

Message :
${data.message}

Merci pour votre retour.

Cordialement,
${data.nom}
    `.trim());
    
    const mailtoUrl = `mailto:${contactEmail}?subject=${subject}&body=${body}`;
    
    // Open mailto
    window.location.href = mailtoUrl;
    
    // Show confirmation
    alert('Votre demande va s\'ouvrir dans votre client email. Si cela ne fonctionne pas, copiez les informations et envoyez-les à ' + contactEmail);
  });
</script>