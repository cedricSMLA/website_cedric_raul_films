---
import Base from '@/layouts/Base.astro';
import Section from '@/components/Section.astro';
import Button from '@/components/Button.astro';
import Card from '@/components/Card.astro';

const contactEmail = import.meta.env.CONTACT_EMAIL || 'contact@cedricraulfilms.fr';
---

<Base
  title="Contact - Cédric Raúl Films"
  description="Contactez Cédric Raúl Films pour votre projet de film de mariage cinématographique. Découvrez notre vision et notre approche unique sur la Côte d'Azur."
>
  <!-- Hero Section -->
  <Section background="primary" padding="xl">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="scroll-reveal text-6xl md:text-7xl font-bold text-pierre mb-8 leading-tight">
        L'art de raconter
        <span class="block text-doré-patiné italic">votre histoire</span>
      </h1>

      <p class="scroll-reveal scroll-reveal-delay-1 text-xl text-pierre/70 mb-12 max-w-2xl mx-auto leading-relaxed">
        Chaque mariage est unique. Créons ensemble un film cinématographique
        qui transcende le temps et capture l'essence de votre amour.
      </p>

      <!-- CTA simple -->
      <div class="scroll-reveal scroll-reveal-delay-2 flex justify-center mb-16">
        <a href="#contact" class="bg-noir-doux text-lin px-12 py-4 rounded-md font-medium hover:bg-pierre transition-all duration-300 hover:scale-105">
          Discutons de votre projet
        </a>
      </div>

      <!-- Promesses -->
      <div class="grid md:grid-cols-3 gap-8">
        <div class="scroll-reveal-slide-left text-center">
          <div class="w-12 h-12 bg-doré-patiné rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-noir-doux" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-pierre">Réponse rapide</h3>
          <p class="text-pierre/70 text-sm">Sous 24h maximum</p>
        </div>

        <div class="scroll-reveal scroll-reveal-delay-1 text-center">
          <div class="w-12 h-12 bg-sauge rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-lin" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-pierre">Devis gratuit</h3>
          <p class="text-pierre/70 text-sm">Personnalisé et détaillé</p>
        </div>

        <div class="scroll-reveal-slide-right text-center">
          <div class="w-12 h-12 bg-doré-patiné rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-noir-doux" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17 8h1a4 4 0 110 8h-1m-10-8H6a4 4 0 000 8h1m2-4h8"/>
            </svg>
          </div>
          <h3 class="font-semibold text-pierre">Conseil expert</h3>
          <p class="text-pierre/70 text-sm">Accompagnement personnalisé</p>
        </div>
      </div>
    </div>
  </Section>

  <!-- Séparateur élégant -->
  <Section background="dark" padding="xl">
    <div class="max-w-4xl mx-auto text-center">
      <div class="scroll-reveal-fade w-24 h-0.5 bg-doré-patiné mx-auto mb-8"></div>
      <h2 class="scroll-reveal text-3xl md:text-4xl font-bold text-lin mb-4">
        Créons ensemble votre film
      </h2>
      <p class="scroll-reveal scroll-reveal-delay-1 text-lg text-lin/70 max-w-2xl mx-auto">
        Chaque détail compte pour raconter votre histoire unique.
        Partagez-nous vos envies et vos inspirations.
      </p>
      <div class="scroll-reveal-fade scroll-reveal-delay-2 w-24 h-0.5 bg-doré-patiné mx-auto mt-8"></div>
    </div>
  </Section>

  <!-- Contact Form -->
  <Section background="primary" padding="xl">
    <div class="max-w-3xl mx-auto" id="contact">

      <!-- Formulaire -->
      <form id="contact-form" class="scroll-reveal space-y-8">
        <!-- Infos de base -->
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <label for="nom" class="block text-sm font-medium text-pierre/80 mb-3">
              Vos noms *
            </label>
            <input
              type="text"
              id="nom"
              name="nom"
              required
              class="w-full px-4 py-3 border border-pierre/20 rounded-md focus:ring-2 focus:ring-doré-patiné focus:border-transparent bg-lin text-pierre placeholder-pierre/40"
              placeholder="Marie & Thomas"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-pierre/80 mb-3">
              Email *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-pierre/20 rounded-md focus:ring-2 focus:ring-doré-patiné focus:border-transparent bg-lin text-pierre placeholder-pierre/40"
              placeholder="marie.thomas@email.com"
            />
          </div>
        </div>

        <!-- Détails mariage -->
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <label for="date" class="block text-sm font-medium text-pierre/80 mb-3">
              Date de votre mariage *
            </label>
            <input
              type="date"
              id="date"
              name="date"
              required
              class="w-full px-4 py-3 border border-pierre/20 rounded-md focus:ring-2 focus:ring-doré-patiné focus:border-transparent bg-lin text-pierre"
            />
          </div>

          <div>
            <label for="lieu" class="block text-sm font-medium text-pierre/80 mb-3">
              Lieu *
            </label>
            <input
              type="text"
              id="lieu"
              name="lieu"
              required
              class="w-full px-4 py-3 border border-pierre/20 rounded-md focus:ring-2 focus:ring-doré-patiné focus:border-transparent bg-lin text-pierre placeholder-pierre/40"
              placeholder="Nice, Côte d'Azur"
            />
          </div>
        </div>

        <!-- Budget -->
        <div>
          <label for="budget" class="block text-sm font-medium text-pierre/80 mb-3">
            Budget envisagé
          </label>
          <select
            id="budget"
            name="budget"
            class="w-full px-4 py-3 border border-pierre/20 rounded-md focus:ring-2 focus:ring-doré-patiné focus:border-transparent bg-lin text-pierre"
          >
            <option value="">Sélectionnez une fourchette</option>
            <option value="2000-3000">2000€ - 3000€</option>
            <option value="3000-4000">3000€ - 4000€</option>
            <option value="4000-5000">4000€ - 5000€</option>
            <option value="5000+">Plus de 5000€</option>
            <option value="autre">À discuter</option>
          </select>
        </div>

        <!-- Message -->
        <div>
          <label for="message" class="block text-sm font-medium text-pierre/80 mb-3">
            Parlez-nous de votre vision *
          </label>
          <textarea
            id="message"
            name="message"
            rows="5"
            required
            class="w-full px-4 py-3 border border-pierre/20 rounded-md focus:ring-2 focus:ring-doré-patiné focus:border-transparent resize-none bg-lin text-pierre placeholder-pierre/40"
            placeholder="Décrivez-nous votre mariage, vos attentes, l'ambiance que vous souhaitez..."
          ></textarea>
        </div>

        <!-- RGPD -->
        <div class="flex items-start space-x-3 pt-4">
          <input
            type="checkbox"
            id="consent"
            name="consent"
            required
            class="mt-1.5 h-4 w-4 text-doré-patiné border-pierre/30 rounded focus:ring-doré-patiné"
          />
          <label for="consent" class="text-sm text-pierre/60 leading-relaxed">
            J'accepte que mes données soient utilisées pour traiter ma demande.
            <a href="/confidentialite" class="text-doré-patiné underline hover:no-underline">Politique de confidentialité</a>
          </label>
        </div>

        <!-- Submit -->
        <div class="pt-6 text-center">
          <Button type="submit" size="lg" class="w-full">
            Envoyer ma demande
          </Button>
        </div>
      </form>
    </div>
  </Section>

  <!-- Infos contact -->
  <Section background="dark" padding="xl">
    <div class="max-w-4xl mx-auto">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- Texte -->
        <div>
          <h2 class="scroll-reveal text-4xl font-bold text-lin mb-6">
            Une approche différente
          </h2>
          <p class="scroll-reveal scroll-reveal-delay-1 text-lin/80 mb-8 leading-relaxed">
            Nous privilégions l'authenticité à la mise en scène. Chaque geste, chaque regard,
            chaque sourire est capturé dans sa vérité pour créer un récit sincère et émouvant.
          </p>

          <!-- Contact direct -->
          <div class="space-y-4">
            <div class="flex items-center space-x-4">
              <div class="w-10 h-10 bg-doré-patiné/20 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-doré-patiné" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                </svg>
              </div>
              <div>
                <p class="text-lin font-medium">{contactEmail}</p>
                <p class="text-lin/60 text-sm">Réponse sous 24h</p>
              </div>
            </div>

            <div class="flex items-center space-x-4">
              <div class="w-10 h-10 bg-doré-patiné/20 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-doré-patiné" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div>
                <p class="text-lin font-medium">Côte d'Azur</p>
                <p class="text-lin/60 text-sm">France</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Valeurs -->
        <div class="space-y-8">
          <div>
            <h3 class="text-xl font-bold text-lin mb-3">Excellence technique</h3>
            <p class="text-lin/70 text-sm leading-relaxed">
              Matériel 4K professionnel, drone FPV d'intérieur, post-production cinématographique.
            </p>
          </div>

          <div>
            <h3 class="text-xl font-bold text-lin mb-3">Discrétion absolue</h3>
            <p class="text-lin/70 text-sm leading-relaxed">
              Présence invisible pour capturer vos moments intimes sans perturber votre célébration.
            </p>
          </div>

          <div>
            <h3 class="text-xl font-bold text-lin mb-3">Livraison soignée</h3>
            <p class="text-lin/70 text-sm leading-relaxed">
              Film principal, highlights, séquences brutes - le tout livré en haute définition.
            </p>
          </div>
        </div>
      </div>
    </div>
  </Section>

  <!-- Notre vision -->
  <Section background="primary" padding="xl">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="scroll-reveal text-4xl md:text-5xl font-bold text-pierre mb-8">
        Notre vision
      </h2>

      <p class="scroll-reveal scroll-reveal-delay-1 text-xl text-pierre/80 mb-12 leading-relaxed">
        Nous croyons que chaque mariage est une histoire unique qui mérite d'être racontée avec
        l'élégance et l'émotion du grand cinéma. Notre mission : créer des films qui transcendent
        le temps et touchent les cœurs.
      </p>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="scroll-reveal-slide-left text-center">
          <div class="w-16 h-16 bg-doré-patiné rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-noir-doux" fill="currentColor" viewBox="0 0 24 24">
              <path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-pierre mb-3">Émotion authentique</h3>
          <p class="text-pierre/70">
            Capturer les vraies émotions, sans mise en scène, pour des souvenirs authentiques.
          </p>
        </div>

        <div class="scroll-reveal scroll-reveal-delay-2 text-center">
          <div class="w-16 h-16 bg-sauge rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-lin" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-pierre mb-3">Excellence technique</h3>
          <p class="text-pierre/70">
            Matériel de pointe et savoir-faire artisanal pour une qualité cinématographique.
          </p>
        </div>

        <div class="scroll-reveal-slide-right text-center">
          <div class="w-16 h-16 bg-doré-patiné rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-noir-doux" fill="currentColor" viewBox="0 0 24 24">
              <path d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-pierre mb-3">Innovation créative</h3>
          <p class="text-pierre/70">
            Techniques avant-gardistes et vision artistique pour sublimer chaque instant.
          </p>
        </div>
      </div>
    </div>
  </Section>

  <!-- Innovation technologique -->
  <Section background="dark" padding="xl">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-4xl md:text-5xl font-bold text-lin mb-8">
        Innovation technologique
      </h2>

      <p class="text-xl text-lin/80 mb-12 leading-relaxed">
        Pionniers de l'usage du drone FPV dans le mariage, nous repoussons constamment les limites
        de la créativité pour offrir des perspectives inédites et saisissantes.
      </p>

      <div class="grid md:grid-cols-2 gap-8">
        <Card class="bg-noir-doux/50 border-pierre/20" hover={false}>
          <div class="p-8 text-center">
            <div class="w-12 h-12 bg-doré-patiné rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-noir-doux" fill="currentColor" viewBox="0 0 24 24">
                <path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-lin mb-4">Drone FPV avancé</h3>
            <p class="text-lin/80">
              Caméras 4K stabilisées, vols d'intérieur sécurisés, trajectoires cinématographiques impossibles
              avec un drone classique.
            </p>
          </div>
        </Card>

        <Card class="bg-noir-doux/50 border-pierre/20" hover={false}>
          <div class="p-8 text-center">
            <div class="w-12 h-12 bg-sauge rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-lin" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-lin mb-4">Workflow moderne</h3>
            <p class="text-lin/80">
              Post-production assistée par IA, étalonnage HDR, mixage surround pour une expérience
              immersive totale.
            </p>
          </div>
        </Card>
      </div>
    </div>
  </Section>

  <!-- SMLEYE Prod -->
  <Section background="primary" padding="xl">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-pierre mb-6">
        Une production <span class="text-doré-patiné" style="font-family: 'Futura', 'Trebuchet MS', Arial, sans-serif;">SMLEYE PROD</span>
      </h2>

      <p class="text-xl text-pierre/80 mb-8 leading-relaxed">
        Cédric Raúl Films fait partie de l'écosystème créatif SMLEYE Prod, studio de production
        audiovisuelle spécialisé dans les contenus premium et l'innovation technologique.
      </p>

      <div class="grid md:grid-cols-3 gap-6">
        <div class="text-center">
          <h3 class="font-bold text-pierre mb-2">Expertise technique</h3>
          <p class="text-pierre/70 text-sm">
            Plus de 10 ans d'expérience en production audiovisuelle
          </p>
        </div>

        <div class="text-center">
          <h3 class="font-bold text-pierre mb-2">Réseau créatif</h3>
          <p class="text-pierre/70 text-sm">
            Collaboration avec les meilleurs talents artistiques
          </p>
        </div>

        <div class="text-center">
          <h3 class="font-bold text-pierre mb-2">Innovation continue</h3>
          <p class="text-pierre/70 text-sm">
            R&D permanente sur les nouvelles technologies
          </p>
        </div>
      </div>
    </div>
  </Section>
</Base>

<script define:vars={{ contactEmail }}>
  // Contact form handling
  const form = document.getElementById('contact-form');

  form?.addEventListener('submit', function(e) {
    e.preventDefault();

    // Get form data
    const formData = new FormData(form);
    const data = Object.fromEntries(formData);

    // Build mailto URL
    const subject = encodeURIComponent(`Demande de devis - Mariage du ${data.date}`);
    const body = encodeURIComponent(`
Bonjour,

Je souhaite recevoir un devis pour la vidéo de mon mariage.

Informations :
- Noms : ${data.nom}
- Email : ${data.email}
- Date du mariage : ${data.date}
- Lieu : ${data.lieu}
- Budget envisagé : ${data.budget || 'Non spécifié'}

Message :
${data.message}

Merci pour votre retour.

Cordialement,
${data.nom}
    `.trim());

    const mailtoUrl = `mailto:${contactEmail}?subject=${subject}&body=${body}`;
    window.location.href = mailtoUrl;

    // Confirmation
    alert('Votre demande va s\'ouvrir dans votre client email. Si cela ne fonctionne pas, copiez les informations et envoyez-les à ' + contactEmail);
  });

  // Smooth scroll
  document.querySelector('a[href="#contact"]')?.addEventListener('click', function(e) {
    e.preventDefault();
    const target = document.querySelector('#contact');
    console.log('Scroll target found:', target);
    if (target) {
      // Offset différent selon la taille d'écran
      const isMobile = window.innerWidth < 768;
      const offset = isMobile ? 180 : 150; // 180px sur mobile, 150px sur desktop
      const targetPosition = target.offsetTop - offset;
      window.scrollTo({
        top: targetPosition,
        behavior: 'smooth'
      });
    } else {
      console.error('Element #contact not found');
    }
  });

  // Scroll reveal animations
  function initScrollReveal() {
    const observerOptions = {
      threshold: 0.15,
      rootMargin: '0px 0px -100px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('reveal-visible');
          // Log pour debug
          console.log('Animation triggered for:', entry.target);
        }
      });
    }, observerOptions);

    // Observer tous les éléments avec les classes scroll-reveal
    const elements = document.querySelectorAll('.scroll-reveal, .scroll-reveal-slide-left, .scroll-reveal-slide-right, .scroll-reveal-fade');
    console.log('Found elements to animate:', elements.length);

    elements.forEach(el => {
      observer.observe(el);
      console.log('Observing:', el);
    });
  }

  // Initialiser après le chargement du DOM
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initScrollReveal);
  } else {
    initScrollReveal();
  }
</script>