---
export interface Props {
  title?: string;
  class?: string;
  href?: string;
  hover?: boolean;
}

const { 
  title,
  class: className = '',
  href,
  hover = true
} = Astro.props;

const baseClasses = 'bg-lin rounded-lg overflow-hidden border border-pierre/20 shadow-soft';
const hoverClasses = hover ? 'hover:border-pierre/40 hover:shadow-cinema transition-all duration-300 hover:transform hover:-translate-y-1' : '';
const classes = `${baseClasses} ${hoverClasses} ${className}`;

const Element = href ? 'a' : 'div';
---

<Element 
  href={href}
  class={classes}
>
  {title && (
    <div class="p-6 pb-4">
      <h3 class="text-xl font-semibold text-pierre">{title}</h3>
    </div>
  )}
  <slot />
</Element>