---
export interface Props {
  class?: string;
  background?: 'primary' | 'secondary' | 'dark' | 'gradient';
  padding?: 'sm' | 'md' | 'lg' | 'xl';
}

const {
  class: className = '',
  background = 'primary',
  padding = 'lg'
} = Astro.props;

const backgrounds = {
  primary: 'bg-lin text-pierre',
  secondary: 'bg-sauge text-lin',
  dark: 'bg-noir-doux text-lin',
  gradient: 'bg-gradient-to-br from-lin to-sauge text-pierre'
};

const paddings = {
  sm: 'py-8',
  md: 'py-12',
  lg: 'py-16',
  xl: 'py-24'
};

const classes = `${backgrounds[background]} ${paddings[padding]} ${className}`;
---

<section class={classes}>
  <div class="container mx-auto px-4">
    <slot />
  </div>
</section>